{
    "extends": ["universe/node", "universe/web", "plugin:jsx-a11y/recommended"],
    "plugins": ["prettier", "react", "jsx-a11y"],
    "parser": "babel-eslint",
    "rules": {
        "prettier/prettier": "error",
        "no-console": 0,
        "max-len": [
            "error",
            {
                "code": 80,
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "ignoreComments": true
            }
        ]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}
